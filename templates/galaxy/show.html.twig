    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ galaxy.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ galaxy.imageName }}</td>
            </tr>
            <tr>
                <th>Name</th>
