{% extends 'base.html.twig' %}

{% block title %}Planet{% endblock %}

{% block body %}
    <h1>Planet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planet.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ planet.imageName }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ planet.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ planet.type }}</td>
            </tr>
            <tr>
                <th>LifeCondition</th>
                <td>{{ planet.lifeCondition }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ planet.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ planet.createdAt ? planet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ planet.updatedAt ? planet.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_planet_index') }}">back to list</a>

    <a href="{{ path('app_planet_edit', {'id': planet.id}) }}">edit</a>

    {{ include('planet/_delete_form.html.twig') }}
{% endblock %}
